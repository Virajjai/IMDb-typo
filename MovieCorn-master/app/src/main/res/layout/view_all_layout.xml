<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#E6E2E2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="290dp">

        <TextView android:layout_width="140dp"
                  android:layout_marginTop="3dp"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"
                  android:id="@+id/name"
                  android:textSize="15sp"
                  android:layout_marginLeft="10dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/rating"
                  android:layout_marginTop="58dp"
                  android:textSize="13sp"
                  android:layout_marginLeft="10dp"/>

        <!--<ImageButton
                android:layout_width="30dp"
                android:background="@null"
                android:id="@+id/blankViewAll"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_height="30dp"/>

        <ImageButton
                android:layout_width="30dp"
                android:background="@null"
                android:id="@+id/filledViewAll"
                android:visibility="gone"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_height="30dp"/>-->

        <ImageView android:layout_width="110dp"
                   android:layout_height="200dp"
                   android:layout_gravity="bottom"
                   android:id="@+id/imgViewAll"
                   android:background="@drawable/giphyback"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>
